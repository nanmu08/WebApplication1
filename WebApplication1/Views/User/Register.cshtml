
@model DataAccess.Models.Users

@{
    ViewBag.Title = "Register";
}


<div class="form-group row">
    <div class=" col-form-label col-sm-8 offset-sm-2">
        <div class="card">
            <div class="card-header">
                Register as User
            </div>
            <div class="card-body">
                <form action="RegisterSubmit" , method="post">
                    <div>
                        <div class="form-group row ">
                            <div class="col-form-label col-sm-4 offset-sm-4">
                                <h6>Image Preview</h6>
                                <img class="rounded-circle" id="imagePreview" src="~/Images/gray.png" alt="Image Preview" style="width: 100px; height: 100px;" />
                            </div>
                        </div>

                        <div class="form-group row ">
                            <label class="col-form-label col-sm-4 offset-sm-4" for="ProfilePic">Your Profile Pic</label>
                        </div>
                        <div class="form-group row mb-1">
                            <input class="col-form-label col-sm-4 offset-sm-4" type="file" name="ProfilePic" id="ProfilePic" accept="image/*" onchange="readURL(this);" />
                        </div>

                        <div class="form-group row mb-1">
                            <label class="col-form-label col-sm-4" for="UserName">UserName:</label>
                            <input type="text" class="col-form-label col-sm-4" name="UserName" id="UserName" placeholder="User Name" />
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group row mb-1">
                            <label class="col-form-label col-sm-4" for="Email">Email Address:</label>
                            <input type="text" class="col-form-label col-sm-4" name="Email" id="Email" placeholder="Email Id" />
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group row mb-1">
                            <label class="col-form-label col-sm-4" for="Password">Password:</label>
                            <input type="password" class="col-form-label col-sm-4" name="Password" id="Password" placeholder="Password" />
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group row mb-1">
                            <label class="col-form-label col-sm-4" for="ConfirmPassword">Confirm Password:</label>
                            <input type="password" class="col-form-label col-sm-4" name="ConfirmPassword" id="ConfirmPassword" placeholder="Password" />
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <hr class="my-4 " style="border-top: 1px solid #ccc;">
                    <div class="form-group row">
                        <button type="submit" class="btn btn-primary col-form-label offset-sm-10 col-sm-2">Sign up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script type="text/javascript">
        function readURL(input) {
            if (input.files && input.files[0]) {
                let fileread = new FileReader();
                fileread.onload = function (e) {
                    $('#imagePreview').attr('src', e.target.result);
                }
                fileread.readAsDataURL(input.files[0]);
            }
        }
    </script>
}

